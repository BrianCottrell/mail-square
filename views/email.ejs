<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='utf-8'>
    <title>MailSquare</title>
    <link rel='stylesheet' href='../../../css/style.css'>
  </head>
  <body>
    <div class='sidebar'>
      <div class='logo'></div>
      <ul>
        <li>
          <a class='entypo-vcard' href='#' title=''></a>
        </li>
        <li>
          <a class='entypo-users' href='#' title=''></a>
        </li>
        <li>
          <a class='entypo-inbox' href='/' title=''></a>
        </li>
        <li>
          <a class='entypo-archive' href='#' title=''></a>
        </li>
        <li>
          <a class='entypo-trash' href='#' title=''></a>
        </li>
      </ul>
    </div>
    <% var emailData = JSON.parse(email.content) %>
    <div class="content">
      <div class="emailhead">
        <h1><%= emailData.subject %></h1>
        <p><%= emailData.sender %></p>
        <p><%= emailData.date %></p>
        <div class="emailnav">
          <a class='entypo-export' href='#' title='move'>
            <span class='hide'>Move</span>
          </a>
          |
           <a class='entypo-trash' href='#' title='delete'>
            <span class='hide'>Delete</span>
          </a>
          |
           <a class='entypo-forward' href='/compose' title='forward'>
            <span class='hide'>Forward</span>
          </a>
          |
           <a class='entypo-comment' href='/compose' title='reply'>
            <span class='hide'>Reply</span>
          </a>
          |
           <a href=<%= '/email/:sender='+email.sender+'/:index='+(parseInt(index)-1) %>>prev</a>
          |
           <a href=<%= '/email/:sender='+email.sender+'/:index='+(parseInt(index)+1) %>>next</a>
        </div>
      </div>
      <div class="emailbody">
            <%= emailData.content %>
            <%= index %>
      </div>

    </div>
    <script src='main.js' type='text/javascript'></script>
  </body>
</html>
